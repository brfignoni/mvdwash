<div class="row align-items-center mt-8 sm-mt-40px" data-anime='{ "translateY": [0, 0], "opacity": [0,1], "duration": 600, "delay": 0, "staggervalue": 300, "easing": "easeOutQuad" }'>
    <div class="col-12">
        <div class="bg-very-light-gray p-9 md-p-6 xs-p-9 border-radius-6px overflow-hidden position-relative">
            <div class="position-absolute right-70px lg-right-20px top-minus-20px w-250px sm-w-180px xs-w-150px opacity-1"><img src="https://www.mvdwash.com.uy/imagenesweb/sillas_relacionadas.png" alt=""></div>
            <span class="ps-25px pe-25px mb-20px text-uppercase text-base-color fs-12 lh-40 fw-700 border-radius-100px bg-gradient-light-gray-transparent d-inline-flex"><i class="bi bi-patch-check fs-16 me-5px"></i>(FAQS)</span>
            <h3 class="fw-700 text-dark-gray ls-minus-1px">Preguntas Frecuentes (FAQS).</h3> 
            <div class="accordion accordion-style-02" id="servicios-faq" data-active-icon="icon-feather-minus" data-inactive-icon="icon-feather-plus">

                {%- for faq in faqSillones %}
                <!-- start accordion item -->
                <div class="accordion-item {{ "active-accordion" if loop.index == 1 }}">
                    <div class="accordion-header border-bottom border-color-transparent-dark-very-light">
                        <a href="#" data-bs-toggle="collapse" data-bs-target="#faq{{loop.index}}" aria-expanded={{ "true" if loop.index == 1 else "false" }} data-bs-parent="#servicios-faq">
                            <div class="accordion-title mb-0 position-relative text-dark-gray pe-30px">
                                <i class="feather icon-feather-minus fs-20"></i><span class="fs-17 fw-500">{{faq.pregunta}}</span>
                            </div>
                        </a>
                    </div>
                    <div id="faq{{loop.index}}" class="accordion-collapse {{ 'collapse show' if loop.index == 1 else 'collapse'}}" data-bs-parent="#servicios-faq">
                        <div class="accordion-body last-paragraph-no-margin border-bottom border-color-transparent-dark-very-light">
                            <p class="w-90 sm-w-95 xs-w-100">{{faq.respuesta}}</p>
                        </div>
                    </div>
                </div>
                <!-- end accordion item -->
                {% endfor -%}
                
            </div>
        </div>
    </div> 
</div>